<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MaterialTheme" parent="AppTheme">
        <item name="undoBarStyle">@style/UndoBarMaterialStyle</item>
    </style>

    <style name="ClassicTheme" parent="AppTheme">
        <item name="undoBarStyle">@style/UndoBarClassicStyle</item>
    </style>

    <style name="KitKatTheme" parent="AppTheme">
        <item name="undoBarStyle">@style/UndoBarKitKatStyle</item>
    </style>

</resources>